<h1>Add new car</h1>
<%= form_with model: @car do |form| %>
    <% if @car.errors.any? %>
        <h2>Errors:</h2>
        <ul>
            <% @car.errors.full.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
    <div class= "form-group">
        <label>Car Name :</label>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class= "form-group">
        <label>Car Model :</label>
        <%= form.text_field :model, class: 'form-control' %>
    </div>
    <div class= "form-group">
        <button type="submit" class="btn btn-primary"> Create car </button>
        <a href="<%= cars_path %>" class="btn btn-secondary">Cancel</a>
    </div>
<% end %>